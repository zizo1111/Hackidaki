{
    "manifest_version": 3,
    "name": "SulliOne",
    "description": "AI-powered web-extension protecting users from exposure to hate speech.",
    "version": "1.0.0",
    "author": "Hakidaki",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery.min.js",
                "doTheJob.js"
            ],
            "css": [
                "styles.css"
            ],
            "exclude_globs": [
                "*options*"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}